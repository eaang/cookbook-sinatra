<h2>Here are all your recipes!</h2>

<ol>
  <% @cookbook.all.each_with_index do |each, index| %>
    <li>
      <% each.status == "true" ? (made = "⦿") : (made = " ") %>
      <%= "[#{made}] #{each.name} - #{each.describe}" %> <a href='made'>✔</a> | <a href="/delete/<%= item[:id] %>" class="btn btn-danger">Delete</a>
    </li>
  <% end %>
</ol>
<a href='new_recipe'>Create New Recipe</a>