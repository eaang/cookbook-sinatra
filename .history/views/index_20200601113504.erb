<h2>Here are all your recipes!</h2>

<ol>
  <% @cookbook.all.each_with_index do |each, index| %>
    <li>
      <% each.status == "false" ? (made = " ") : (made = "X") %>
      <%= "[#{made}] #{each.name} (#{each.prep_time}) - #{each.difficulty}" %>
    </li>
  <% end %>
</ol>
<a href='views/new_recipe.erb'>Create New Recipe</a>